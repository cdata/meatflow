{
  "name": "Meatflow",
  "version": "0.0.1",
  "manifest_version": 2,

  "default_locale": "en",
  "description": "Enables meatier in Flowdock discussion.",
  "icons": {
    "256": "meatflow-256.png"
  },

  "minimum_chrome_version": "21.0.1180.57",
  "content_scripts":[{
    "matches": [ "https://www.flowdock.com/app/*" ],
    "js": [
      "meatflow/common.js",
      "meatflow.js"
    ],
    "css": [ "meatflow.css" ]
  }],

  "web_accessible_resources": [
    "bower_components/Animated_GIF/dist/Animated_GIF.worker.js",
    "frame.html",
    "meatflow/common.js",
    "meatflow/frame.js",
    "meatflow-256.png"
  ],
  "permissions": [
    "*://www.flowdock.com/*",
    "debugger",
    "background"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.flowdock.com; object-src 'self'; frame-src 'self' https://www.flowdock.com"
}
